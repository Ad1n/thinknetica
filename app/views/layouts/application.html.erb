<!DOCTYPE html>
<html>
  <head>
    <title>Thinknetica</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <p> <%=  link_to 'Sign up', new_user_registration_path if current_user.nil? %></p>
  <p> <%=  link_to 'Sign in', new_user_session_path if current_user.nil? %></p>
  <p> <%=  link_to 'Sign out', destroy_user_session_path, method: :delete unless current_user.nil? %> |
  <%= link_to 'Home', questions_path %></p>
    <%= yield %>
  </body>

</html>
